<Window x:Class="IQTestsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="200" Width="400">
    <Grid Name="mainGrid">
        <Border BorderBrush="Black" BorderThickness="0" Width="100" Height="100">
            <Grid Name="myCanvas" Width="100" Height="100"/>
        </Border>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Generate IQ tests" Height="60" Width="150" FontSize="18" VerticalAlignment="Center" Margin="10" Click="GenerateButton_Click"/>
            <TextBlock Name="messageTextBlock" FontSize="18" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
